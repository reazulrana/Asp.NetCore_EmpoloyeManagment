@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>

<a class="btn btn-primary" asp-action="Register" asp-controller="Account">Create User</a>

@if (Model.Any())
{
    foreach(var user in Model)
    { 

<div class="card">
    <div class="card-header">
        <h5>@user.Id</h5>
    </div>
    <div class="card-body">
        <h6>@user.UserName</h6>
    </div>
    <div class="card-footer">
        <form method="post" asp-action="DeleteUser" asp-route-Id="@user.Id">
            <a asp-controller="Administration" asp-action="EditUser" asp-route-Id="@user.Id" class="btn btn-primary">Edit</a>
               
            
            <span id="confirmdelete_@user.Id" style="display:none; float:right">
                <span class="text-danger">Are You Sure To Delete The Record</span>
                <button type="submit" class="btn btn-danger">Yes</button>
                  <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id',false)">No</a>  
                </span>
                <span id="delete_@user.Id">
                    <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id',true)">Delete</a>

                </span>

</form>

    </div>
</div>
    }
}
else
{
<div class="card">
<div class="card-header">
</div>
<div class="card-body">
<h5 class="card-title">Use Button Below To Create Users</h5>

<a class="btn btn-primary" asp-action="Register" asp-controller="Account">Create User</a>
</div>
</div>
}




@section Scripts
{
    <script src="~/js/CustomScripts.js"></script>
}